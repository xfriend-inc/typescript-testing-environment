  "dependencies": {
    "dotenv": "^16.0.3",
    "jsonwebtoken": "^9.0.1",
    "lodash": "^4.17.21",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@faker-js/faker": "^8.0.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "latest",
    "commitizen": "^1.0.3",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^1.0.1",
    "@typescript-eslint/parser": "latest",
    "eslint": "latest",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "prisma": "^5.0.0",
    "typescript": "^5.1.6",
    "bun-types": "latest"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "bun run lint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "transpile": "./scripts/build.bash",
    "start:dev": "scripts/dev.bash",
    "start": "scripts/start.bash",
    "test": "jest --config ./jest.config.js",
    "test:unit": "cross-env NODE_ENV=test-unit npm run test ./test/unit/**/*.ts",
    "lint": "eslint ./test",
    "lint:fix": "bun run lint -- --fix",
    "format": "prettier ./test --list-different --write",
    "postinstall": "husky install"
  }
}